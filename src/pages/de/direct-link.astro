---
import LandingLayout from '@layouts/LandingLayout.astro';
import Button from '@components/Button.astro';
import type { Lang } from '@i18n/translations';

const lang: Lang = 'de';
---

<LandingLayout title="Direktlink | Hustlrr" description="Schnellzugriff auf Hustlrr KI-Chat und Browse." lang={lang}>
  <div class="animate-hero">
    <div class="text-5xl mb-6" aria-hidden="true">&#x1F517;</div>
    <h1 class="text-[var(--text-h1)] font-bold font-[var(--font-display)] mb-4">
      Schnellzugriff
    </h1>
    <p class="text-text-secondary mb-8">
      Direkt in den KI-gestützten Chat und das Browsing einsteigen.
    </p>
    <Button href="https://app.hustlrr.ai" variant="primary" size="lg" external>
      Hustlrr öffnen
    </Button>
  </div>
</LandingLayout>

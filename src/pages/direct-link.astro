---
import LandingLayout from '@layouts/LandingLayout.astro';
import Button from '@components/Button.astro';
import type { Lang } from '@i18n/translations';

const lang: Lang = 'en';
---

<LandingLayout title="Direct Link | Hustlrr" description="Quick access to Hustlrr AI chat and browse." lang={lang}>
  <div class="animate-hero">
    <div class="text-5xl mb-6" aria-hidden="true">&#x1F517;</div>
    <h1 class="text-[var(--text-h1)] font-bold font-[var(--font-display)] mb-4">
      Quick Access
    </h1>
    <p class="text-text-secondary mb-8">
      Jump straight into AI-powered chat and browsing.
    </p>
    <Button href="https://app.hustlrr.ai" variant="primary" size="lg" external>
      Open Hustlrr
    </Button>
  </div>
</LandingLayout>

---
import type { Lang } from '@i18n/translations';
import { useTranslations } from '@i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const appStoreUrl = 'https://apps.apple.com/app/hustlrr-every-ai-chat/id6737912223';
---

<section class="relative px-5 -mt-16" style="height: min(888px, 100vh); overflow-x: clip; overflow-y: visible;">
  <!-- Hero background image — full bleed, extends behind nav bar -->
  <!-- Live site: section 820px + 68px nav = 888px total from viewport top -->
  <!-- overflow-x: clip prevents horizontal scrollbar; overflow-y: visible lets purple bleed into next section -->
  <div
    class="absolute"
    style="top: -40%; left: -9%; right: -9%; bottom: -38%; z-index: 0;"
    aria-hidden="true"
  >
    <img
      src="/images/hero-phone.jpg"
      alt=""
      class="w-full h-full object-cover"
    />
    <!-- Bottom fade: transparent → dark bg color -->
    <div class="absolute inset-x-0 bottom-0 h-[10%]" style="background: linear-gradient(to bottom, transparent, #0a0c16);"></div>
  </div>

  <!-- Content overlay -->
  <div class="relative mx-auto max-w-[var(--max-w-content)] flex flex-col items-center justify-end" style="height: min(888px, 100vh); padding-bottom: 48px; padding-top: 120px; z-index: 4;">

    <!-- Brand mark + Title + Subtitle -->
    <div class="max-w-[420px] text-left mb-8">
      <!-- Brand logo -->
      <div class="mb-4">
        <img
          src="/images/logo.png"
          alt="Hustlrr"
          class="h-[52px] w-auto"
        />
      </div>

      <h1 class="text-[26px] font-semibold text-white leading-[1.2] mb-3">
        {t('hero.title')}
      </h1>
      <p class="text-[20px] text-white/80 leading-[1.3]">
        {t('hero.subtitle')}
      </p>
    </div>

    <!-- CTA Button - large white pill -->
    <div class="flex justify-center mb-8 animate-hero">
      <a
        href={appStoreUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-4 bg-white text-bg-primary font-bold text-[22px] pl-10 pr-6 py-6 rounded-[var(--radius-cta)] hover:bg-gray-100 transition-colors duration-200"
      >
        {t('cta.getHustlrr')}
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>

    <!-- Trust badges -->
    <div class="flex items-center justify-center gap-8 animate-hero-delay-1">
      <img
        src="/images/badge-ratings.png"
        alt="4.9 stars on the App Store"
        class="h-[50px] w-auto"
      />
      <img
        src="/images/badge-eu.png"
        alt="Built in Europe"
        class="h-[50px] w-auto"
      />
    </div>
  </div>
</section>

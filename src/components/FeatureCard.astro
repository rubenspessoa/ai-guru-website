---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="hover-card rounded-[var(--radius-card)] border border-border bg-bg-card p-6 md:p-8">
  <div class="text-3xl mb-4" aria-hidden="true">{icon}</div>
  <h3 class="text-lg font-semibold font-[var(--font-display)] text-text-primary mb-2">
    {title}
  </h3>
  <p class="text-sm text-text-secondary leading-relaxed">
    {description}
  </p>
</div>

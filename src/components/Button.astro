---
interface Props {
  href: string;
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  external?: boolean;
  class?: string;
}

const {
  href,
  variant = 'primary',
  size = 'md',
  external = false,
  class: className = '',
} = Astro.props;

const baseClasses =
  'inline-flex items-center justify-center font-medium rounded-[var(--radius-button)] hover-button focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-bg-primary';

const variantClasses = {
  primary: 'bg-accent text-white hover:bg-accent-light',
  secondary: 'bg-bg-card text-text-primary border border-border-strong hover:bg-bg-card-hover',
  outline: 'bg-transparent text-accent border border-accent hover:bg-accent/10',
};

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-body',
  lg: 'px-8 py-4 text-body font-semibold',
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;
const externalAttrs = external ? { target: '_blank', rel: 'noopener noreferrer' } : {};
---

<a href={href} class={classes} {...externalAttrs}>
  <slot />
</a>
